<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Main">
    <include layout="@layout/top_bar"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6585285349986336/3047769230">
    </com.google.android.gms.ads.AdView>

<androidx.cardview.widget.CardView
    android:layout_width="320dp"
    android:layout_height="420dp"
    android:layout_marginTop="65dp"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="50dp"
    app:cardElevation="20dp"
    >
    <ImageView
        android:id="@+id/front_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/guru" />

</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn1"
        android:outlineSpotShadowColor="@color/black"
        android:elevation="10dp"
        android:text="திருவாசகம்"
        android:textSize="25dp"
        android:fontFamily="@font/kav"
        android:textStyle="bold"
        android:textFontWeight="1000"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_alignTop="@+id/front_image"
        />
    <Button
        android:id="@+id/btn_2"
        android:outlineSpotShadowColor="@color/black"
        android:elevation="7dp"
        android:text="சிவஞானவித்து"
        android:textSize="25dp"
        android:fontFamily="@font/kav"
        android:paddingTop="7dp"
        android:textStyle="bold"
        android:textFontWeight="1000"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="@id/btn1"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btn1"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_3"
        android:outlineSpotShadowColor="@color/black"
        android:elevation="7dp"
        android:text="பாடல் கேட்க"
        android:textSize="25dp"
        android:fontFamily="@font/kav"
        android:paddingTop="7dp"
        android:textStyle="bold"
        android:textFontWeight="1000"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="@id/btn_2"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btn_2"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/btn_4"
        android:outlineSpotShadowColor="@color/black"
        android:elevation="7dp"
        android:text="... மேலும் ..."
        android:textSize="25dp"
        android:fontFamily="@font/kav"
        android:paddingTop="7dp"
        android:textStyle="bold"
        android:textFontWeight="1000"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="@id/btn_3"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btn_3"
        android:background="@color/white"
        />
</RelativeLayout>